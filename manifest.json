{
  "app": {
    "background": {
      "scripts": ["background.js"]
    }
  },
  "name": "NVC",
  "manifest_version": 2,
  "version":"0.0.1",

  "commands": {
    "launch-nvc": {
      "suggested_key": {
        "default": "Ctrl+Shift+X"
      },
      "description": "Launch NVC",
      "global": true
    }
  },

  "permissions":[
    {"fileSystem": ["write", "retainEntries"]},
    "storage",
    "alwaysOnTopWindows"
  ]

}
